<h1><%= @user.name %></h1>

<% if @user.stories.any? %>
  <h4>Here are the stories for this user:</h4>

  <ul>
      <% @user.stories.each do |story| %>
        <li>
          <%= story.title %> |
          <%= link_to "Edit", edit_user_story_path(@user, story) %> |
          <%= link_to "Delete", user_story_path(@user, story),
                                   :data => {:confirm => "Are you sure?",
                                                  :method => "delete"} %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p>There are no stories yet!</p>
  <% end %>

<p><%= link_to "Edit", edit_user_path(@user) %></p>
<p><%= link_to "Delete", user_path(@user),
                         :data => {:confirm => "You sure?",
                                   :method => "delete"} %></p>

<p><%= link_to "Return to users", users_path %></p>
